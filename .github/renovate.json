{
    "extends": ["config:base"],
    "labels": [ "dependencies" ],
    "dependencyDashboard": true,
    "packageRules": [
        {
            "matchManagers": ["bundler"],
            "rangeStrategy": "update-lockfile"
        },
        {
            "matchManagers": ["ruby-version"],
            "matchPackageNames": ["ruby"],
            "allowedVersions": "< 2.8"
        }
    ]
}
