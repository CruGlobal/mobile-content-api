{
    "extends": ["config:base"],
    "labels": [ "dependencies" ],
    "dependencyDashboard": true,
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["at any time"]
    },
    "packageRules": [
        {
            "matchManagers": ["bundler"],
            "rangeStrategy": "update-lockfile"
        },
        {
            "matchManagers": ["ruby-version"],
            "matchPackageNames": ["ruby"],
            "allowedVersions": "< 2.8"
        }
    ]
}
